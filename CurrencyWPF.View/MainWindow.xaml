<Window x:Class="CurrencyWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CurrencyWPF"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">

    <Grid>
        <DataGrid d:ItemsSource="{d:SampleData ItemCount=5}" Margin="10,42,10,10"/>
        <Label Content="Current state of major cryptocurrencies" 
               Style="{DynamicResource MainWindowLbl}"
               HorizontalAlignment="Center" 
               Margin="0,16,0,0" 
               VerticalAlignment="Top"/>

    </Grid>
</Window>
