<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    
    <!--Color Palette was taken at https://coolors.co/palette/ffadad-ffd6a5-fdffb6-caffbf-9bf6ff-a0c4ff-bdb2ff-ffc6ff-fffffc-->
    <Color x:Key="PrimaryGreen">#caffbf</Color>
    <Color x:Key="PrimaryBlue">#9bf6ff</Color>
    <Color x:Key="PrimaryViolet">#bdb2ff</Color>
    <Color x:Key="PrimaryPurple">#ffc6ff</Color>


    <Color x:Key="PrimaryLight">#fffffc</Color>

    <Color x:Key="SecondaryBlue">#a0c4ff</Color>
    <Color x:Key="SecondaryYellow">#fdffb6</Color>
    <Color x:Key="SecondaryOrange">#ffd6a5</Color>
    <Color x:Key="SecondaryRed">#ffadad</Color>

    <Color x:Key="DarkText">#000814</Color>
    <Color x:Key="LightText">#ffffff</Color>

    <LinearGradientBrush x:Key="Menu" StartPoint="0.75, 0" EndPoint="0, 1">
        <GradientStop Color="{StaticResource SecondaryBlue}" Offset="0.1" />
        <GradientStop Color="{StaticResource PrimaryLight}" Offset="0.5" />
        <GradientStop Color="{StaticResource PrimaryViolet}" Offset="1" />
    </LinearGradientBrush>

</ResourceDictionary>